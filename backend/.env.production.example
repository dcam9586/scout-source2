# SourceScout Production Environment Variables
# Copy this to .env and fill in your values

# === SERVER ===
NODE_ENV=production
PORT=3001

# === DATABASE ===
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://sourcescout:YOUR_SECURE_PASSWORD@localhost:5432/sourcescout

# === REDIS ===
REDIS_URL=redis://localhost:6379

# === AUTHENTICATION ===
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
JWT_EXPIRY=7d

# Encryption key for user API keys (32 characters)
API_KEY_ENCRYPTION_SECRET=CHANGE_THIS_TO_32_CHAR_SECRET!!

# === SHOPIFY ===
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_API_SCOPES=read_products,write_products,read_inventory,write_inventory
SHOPIFY_APP_URL=https://your-production-domain.com

# === CJ DROPSHIPPING ===
CJ_API_KEY=your-cj-api-key
CJ_API_URL=https://developers.cjdropshipping.com/api2.0/v1
CJ_SANDBOX_MODE=false

# === RATE LIMITING ===
FREE_TIER_SEARCHES_PER_MONTH=10
PREMIUM_TIER_SEARCHES_UNLIMITED=true

# === OPTIONAL: MONITORING ===
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=info
