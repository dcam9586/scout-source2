# Shopify Configuration
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_API_SCOPES=write_products,read_products
SHOPIFY_APP_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sourcescout
REDIS_URL=redis://localhost:6379

# Alibaba Configuration
ALIBABA_CLIENT_ID=your_alibaba_client_id
ALIBABA_CLIENT_SECRET=your_alibaba_client_secret
ALIBABA_API_URL=https://api.alibaba.com

# Made-in-China Configuration (for scraping)
MADE_IN_CHINA_URL=https://www.made-in-china.com

# Node Environment
NODE_ENV=development
PORT=3001

# API Rate Limiting
FREE_TIER_SEARCHES_PER_MONTH=10
PREMIUM_TIER_SEARCHES_UNLIMITED=true

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=7d
