// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model EmailCapture {
  id                String   @id @default(uuid())
  shop              String
  email             String
  sessionId         String?
  browserFingerprint String?
  ipAddress         String?
  userAgent         String?
  referrer          String?
  discountCode      String?  @unique
  attributionMethod String   // "code" or "event"
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  orders            Order[]
  events            AttributionEvent[]
  
  @@index([shop])
  @@index([email])
  @@index([discountCode])
}

model Order {
  id              String   @id @default(uuid())
  shop            String
  orderId         String   // Shopify order ID
  customerEmail   String?
  discountCode    String?
  totalPrice      Float
  currency        String
  orderNumber     String?
  createdAt       DateTime @default(now())
  
  emailCaptureId  String?
  emailCapture    EmailCapture? @relation(fields: [emailCaptureId], references: [id])
  
  @@index([shop])
  @@index([orderId])
  @@index([customerEmail])
  @@index([discountCode])
}

model AttributionEvent {
  id              String   @id @default(uuid())
  emailCaptureId  String
  emailCapture    EmailCapture @relation(fields: [emailCaptureId], references: [id])
  eventType       String   // "page_view", "add_to_cart", "checkout_started", "order_placed"
  sessionId       String?
  browserFingerprint String?
  metadata        String?  // JSON string for additional data
  createdAt       DateTime @default(now())
  
  @@index([emailCaptureId])
  @@index([sessionId])
}
